.Wrapper
  -if user_signed_in?
    .MM_Main
      .LeftBar
        - current_user.memos.each do |memo|
          .Memo
            = link_to '#' do
              .Memos__Name
                = memo.title
        .NewMemo
          = link_to "新規作成", new_memo_path
      .RightBar
        .Title
        .Memo
          - @memos.each do |memo|
            = memo.title
            = memo.content
            = link_to edit_memo_path(memo.id) do
              = icon('fas', 'pen')
            = link_to memo_path(memo.id), method: :delete, data: {confirm: "are you sure?"} do
              = icon('fas', 'trash')
  - else
    = link_to "ログイン",new_user_session_path ,class:"post"
    = link_to "新規登録",new_user_registration_path ,class:"post"
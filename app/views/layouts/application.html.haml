!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title WithWork
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    -# = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      .Header
        .Header__TitleBar
          %h1.Header__TitleBar__Title
            With Work
          -if user_signed_in?
            %p.Header__TitleBar__User
              = current_user.name
        .Header__LinkBar
          %p.Header__LinkBar__countent
            = link_to "WorkRecord", records_path, class: "countent"
          %p.Header__LinkBar__countent
            = link_to "TODO", projects_path, class: "countent"
          %p.Header__LinkBar__countent
            = link_to "MEMO", memos_path, class: "countent"
    = yield

